<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:forceDarkAllowed="false"
    tools:context=".Activity.RegistrationPhone.RegistrationPhoneActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/alata"
        android:text="BlinkBlink"
        android:textColor="@color/white"
        android:textSize="27dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="We need in your number!"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.031" />


    <com.hbb20.CountryCodePicker
        android:id="@+id/cpp_country"
        android:layout_width="128dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:padding="16dp"
        app:ccpDialog_backgroundColor="@color/black"
        app:ccpDialog_showNameCode="false"
        app:ccpDialog_textColor="@color/white"
        app:ccp_autoFormatNumber="true"
        app:ccp_contentColor="@color/white"
        app:ccp_showArrow="false"
        app:ccp_showFlag="true"
        app:ccp_showFullName="false"
        app:ccp_showNameCode="false"
        app:ccp_showPhoneCode="true"
        app:ccp_useFlagEmoji="true"
        app:layout_constraintBottom_toTopOf="@+id/privacy_phone_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.082" />

    <EditText
        android:id="@+id/phone_edit_text"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:background="@android:color/transparent"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/alata"
        android:hint="Enter your phone"
        android:inputType="phone"
        android:paddingLeft="4dp"
        android:textColor="@color/white"
        android:textColorHint="@color/line"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cpp_country"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/cpp_country"
        app:layout_constraintTop_toTopOf="@+id/cpp_country"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/phone_continue_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"

        android:layout_marginBottom="296dp"
        android:background="@drawable/add_button"
        android:fontFamily="@font/alata"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="?attr/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.712" />

    <TextView
        android:id="@+id/privacy_phone_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="By clicking continue, you agree to the terms of our Privacy Policy"
        android:textColor="@color/line"
        android:fontFamily="@font/alata"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/phone_continue_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.987" />


</androidx.constraintlayout.widget.ConstraintLayout>